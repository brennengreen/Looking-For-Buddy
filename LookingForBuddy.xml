<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Script file="LookingForBuddy.lua" />

    <Frame name="LFB" parent="UIParent" inherits="BasicFrameTemplate" hidden="true">
        <Size><RelDimension x=".5" y=".35" /></Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>

        <Frames>
            <ScrollFrame name="LFBSummaryScroll" parent="LFB" inherits="FauxScrollFrameTemplateLight">
                <Size><RelDimension relativeTo="LFB" x="0.15" y=".335" /></Size>
                <Anchors><Anchor point="BOTTOMLEFT" relativeTo="LFB"/></Anchors>

                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture>
                            <Color r="0" g="0" b="0" a="0.25"/>
                        </Texture>
                    </Layer>
                </Layers>

                <Frames>
                    <Button name="LFBAddPost" parent="LFBSummaryScroll" inherits="UIPanelButtonTemplate" parentKey="AddPostButton">
                        <Anchors><Anchor point="TOPRIGHT" /></Anchors>
                        <Size> <RelDimension relativeTo="LFB" x="0.15" y=".015" /> </Size>
                        <Scripts> <OnClick function="LFB_AddPost"/> </Scripts>
                    </Button>
                </Frames>
            </ScrollFrame>

            <Frame name="LFBFullPost" parent="LFB">
                <Size><RelDimension relativeTo="LFB" x="0.335" y=".335" /></Size>
                <Anchors><Anchor point="BOTTOMRIGHT" relativeTo="LFB"/></Anchors>

                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture>
                            <Color r="0" g="0" b="0" a="0.6"/>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>

        <Scripts>
            <OnLoad function="LFB_OnLoad" />
            <OnEvent function="LFB_OnEvent" />
        </Scripts>

        
    </Frame>
</Ui>